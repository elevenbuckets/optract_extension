{
    "name": "Optract",
    "version": "1.0",
    "description": "Build an Extension",
    "permissions": [
        "storage",
        "nativeMessaging",
        "activeTab",
        "tabs"
    ],
    "background": {
        "scripts": [
            "background_bundle.js"
        ],
        "persistent": true
    },
    "incognito":"split",
    "content_scripts": [
        {
            "matches": [
                "file://ilgdmcpggachbhfecjhbcdedhjpfipec/*"
              ],

            "js": [
                "content.js",
                "bundle.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "erebor.png"
    },
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
