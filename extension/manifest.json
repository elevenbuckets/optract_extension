{
    "name": "Optract",
    "version": "1.0.1",
    "description": "Optract: Refine understanding and gain insights collectively in today's highly connected world.",
    "permissions": [
        "storage",
        "nativeMessaging",
        "activeTab",
        "tabs",
        "background"
    ],
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "applications": {
	"gecko": {
	   "id": "{5b2b58c5-1a22-4893-ac58-9ca33f27cdd4}",
	   "update_url": "https://11be.org/releases/optract/updates.json"
	}
    },
    "content_scripts": [
        {
            "matches": [
                "file://*/*"
              ],
            "js": [
                "bundle.js"
            ]
        },
        {
            "matches": [
                "http://*/*",
                "https://*/*"
              ],
	    "run_at": "document_end",
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "erebor.png"
    },
    "browser_specific_settings": {
	"gecko": {
      		"id": "{5b2b58c5-1a22-4893-ac58-9ca33f27cdd4}",
      		"strict_min_version": "69.0"
        }
    },
    "addons": {
      "{5b2b58c5-1a22-4893-ac58-9ca33f27cdd4}": {
        "updates": [
          {
            "version": "1.0.1",
            "update_link": "https://11be.org/releases/optract/Optract-1.0.1.xpi"
          }
        ]
      }
    }, 
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
